<% layout("/layouts/boilerplate.ejs") -%>

<body>
    <div class="row mt-5 mb-5">
        <div class="col-8 offset-2">

            <h1>Create a new Listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
            <div class="invalid-feedback">Enter Title</div>
        </div><br>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" placeholder="Add description" required></textarea>
            <div class="invalid-feedback">Enter Description</div>
        </div><br>
        <div>
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="listing[image]" placeholder="Enter image URL/link" class="form-control">
        </div><br>
        <div>
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" placeholder="Enter price" class="form-control" required>
            <div class="invalid-feedback">Enter valid Price</div>
        </div><br>
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
            <div class="invalid-feedback">Provide Location</div>
        </div><br>
        <div>
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
            <div class="invalid-feedback">Enter Country name</div>
        </div>
        <br>
        <button type="submit" class="btn btn-dark add-btn">Add</button> 

    </form>

        </div>
    </div>
    
</body>
