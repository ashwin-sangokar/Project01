
<% layout("/layouts/boilerplate.ejs") -%>

<body>

    <div class="row mt-5 mb-3">
        <div class="col-8 offset-2">
            <h1><center><%= listing.title %> </center></h1>

    <div class="card listing-card show-card">
        <div class="img">
            <img src="<%= listing.image.url %>" class="card-img-top  show-img" alt="listing_image">
        </div>
        
        <div class="card-body"><br>
            <p class="card-text">Hosted by  :  <b><%= listing.owner.username %></b></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night </p>
            <p class="card-text"><%= listing.location %> </p>
            <p class="card-text"><%= listing.country %> </p>
            <p class="card-text">
                dummy run </p>
        </div>
    </div>
    <div class="show-btn">
        <div class="col-1">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
        </div>
        <div class="col-2">
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark add-btn">Delete</button>
            </form>
        </div>
    </div>
    
    <br><br>
        <div><hr>
        <h4>Give Feedback</h4>
        <form action="/listings/<%= listing.id%>/reviews" method="POST" novalidate class="needs-validation">
            <div>
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" step="1" id="rating" name="review[rating]" class="form-range">
            </div>
            <div>
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">Enter Comment</div>
            </div><br>
            <button type="submit" class="btn btn-outline-dark">Post</button>
        </form>

        <hr>
        <p><h4>All Reviews</h4></p>
        <div class="row">
            <% for(review of listing.reviews) {%>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Ashwin Sangokar</h5>
                    <p class="card-text"><%= review.comment %></p>
                    <p class="card-text"><%= review.rating %> star</p>
                </div>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                    <button class="review-delete btn btn-sm btn-dark mt-3 mb-3">Delete</button>
                </form>
            </div>
            <% } %>  
        </div>
         
        
    </div>
        <br><br>
        </div>
        
    </div>

    

    
</body>
